<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:id="@+id/rl_stock_row"
    android:orientation="vertical">
    
    <RelativeLayout
        android:id="@+id/rl_stock_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_stock_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="TIME"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_stock_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Time"
            android:layout_below="@id/tv_stock_symbol"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_position_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="viewEnd"
        android:text="$16500"
        android:textSize="16sp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_next"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/tv_price_change"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="19dp"
            android:text="+2.00"
            android:textColor="#6ABD0F"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_percentage_change"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price_change"
            android:textAlignment="viewEnd"
            android:text="(0.82%)"
            android:textColor="#6ABD0F"
            android:textSize="14sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="8dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_details"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>